<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <gradient
				android:startColor="#012D50"
				android:centerColor="#CECFCE"
				android:endColor="#BEBEBE"
				android:angle="270"/>
            <stroke
                android:width="1dp"
                android:color="#FFF" />
            <corners
                android:radius="7dp" />
            
            <padding 
			    android:left="10dp"
			    android:right="10dp"
		    />

        </shape>
    </item>
    <item>
        <shape>
            <gradient
				android:startColor="#FFF"
				android:centerColor="#CECFCE"
				android:endColor="#BEBEBE"
				android:angle="270"/>
            <stroke
                android:width="1dp"
                android:color= "#449DEF" />
            <corners
                android:radius="7dp" />
             <padding 
			    android:left="10dp"
			    android:right="10dp"
		    />

        </shape>
    </item>
</selector>
