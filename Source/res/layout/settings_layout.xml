<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent" >
	
    <!-- ______________________________________________________________setting type buttons -->
    <ScrollView
        android:id="@+id/chooseSettings"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent">
	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:orientation="vertical"
	       >
	       
	        <Button
	            android:id="@+id/ServerSetButton"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:text="Server" />
	
	        <Button
	            android:id="@+id/trainingSetButton"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:text="Face" />
	
	        <Button
	            android:id="@+id/twitterSetButton"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:text="Twitter" />
	        
	         <Button
	            android:id="@+id/voiceSetButton"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:text="Voice" />
	        
	         <Button
	            android:id="@+id/cancelButton1"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:text="Cancel" />
	    </LinearLayout>
    </ScrollView>
	    
   	<!-- ______________________________________________________________voice settings -->
   	
    <LinearLayout
       	android:id="@+id/VoiceSettings"
 	   	android:visibility="gone"
   	   	android:layout_width="match_parent"
	   	android:layout_height="match_parent"
	   	android:orientation="vertical">
	         
        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Voice Settings:"
            android:textColor="#449DEF"
            android:textAppearance="?android:attr/textAppearanceLarge" />
   	        
  	    <LinearLayout
  	        android:layout_width="fill_parent"
	    	android:layout_height="wrap_content"
	    	android:orientation="horizontal">
		    
        <Button
           	android:id="@+id/voice_saveSettings"
           	android:layout_width="match_parent"
           	android:layout_height="wrap_content"
           	android:layout_weight="1"
           	android:background="@drawable/button1"
           	android:textColor="#fff"
           	android:text="Save" />
        
        <Button
            android:id="@+id/voice_cancelSettings"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:textColor="#fff"
	        android:background="@drawable/button1"
	        android:text="Back" />
   		</LinearLayout>
   		<View
   	    	android:layout_width="fill_parent"
        	android:layout_height="2dp"
        	android:background="#449DEF"
        	android:layout_margin="5dp"/>
   	
   		<!-- Voice Calibration -->
   		<LinearLayout 
   		    android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:orientation="horizontal">
        	<TextView
        	    android:id="@+id/voice_calibration_TV"
	    	    android:layout_width="wrap_content"
	    	    android:layout_height="wrap_content"
	    	    android:text="Voice calibration:" />
        	
        	<Button
        	    android:id="@+id/voice_CalibrationHelpButton"
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:text="Help" />
        
        	<Button
        	    android:id="@+id/voice_CalibrationHelpVoiceButton"
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:text="Voice Help" />
   		</LinearLayout>
   		<LinearLayout 
   	    	android:layout_width="wrap_content"
   	    	android:layout_height="wrap_content"
   	    	android:orientation="horizontal">
        	<EditText
            	android:id="@+id/voice_calibration_ET"
	        	android:layout_width="wrap_content"
	        	android:layout_height="wrap_content" >
	        	<requestFocus />
	    	</EditText>
        	<Button
        	    android:id="@+id/voice_autoCalibrateButton"
            	android:layout_width="match_parent"
            	android:layout_height="wrap_content"
            	android:text="Auto Calibrate" />
   		</LinearLayout>
   		<View
   	    	android:layout_width="fill_parent"
   	    	android:layout_height="2dp"
   	    	android:background="#449DEF"
        	android:layout_margin="5dp"/>
   		
   	</LinearLayout>
   	    
   	<!-- ______________________________________________________________Server settings -->
   	<LinearLayout
        android:id="@+id/ServerSettings"
 	   	android:visibility="gone"
   	   	android:layout_width="match_parent"
	   	android:layout_height="match_parent"
	   	android:orientation="vertical">
   		
   	    <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Server Settings:"
            android:textColor="#449DEF"
            android:textAppearance="?android:attr/textAppearanceLarge" />
   	        
  	    <LinearLayout
  	        android:layout_width="fill_parent"
	    	android:layout_height="wrap_content"
	    	android:orientation="horizontal">
        	
  	        <Button
           		android:id="@+id/saveServerSettingsButton"
           		android:layout_width="match_parent"
	           	android:layout_height="wrap_content"
	           	android:layout_weight="1"
	           	android:background="@drawable/button1"
	           	android:textColor="#fff"
	           	android:text="Save" />
        
        	<Button
        	    android:id="@+id/cancelServerSettingsButton"
	        	android:layout_width="match_parent"
	        	android:layout_height="wrap_content"
	        	android:layout_weight="1"
	        	android:textColor="#fff"
	        	android:background="@drawable/button1"
	        	android:text="Back" />
       	</LinearLayout>
       	<View
   	    	android:layout_width="fill_parent"
        	android:layout_height="2dp"
        	android:background="#449DEF"
        	android:layout_margin="5dp"/>
   	
       	<ScrollView 
   		    android:layout_width="fill_parent"
			android:layout_height="wrap_content">
       	<LinearLayout 
   		    android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical">
   		<!-- IP address -->
   		<LinearLayout 
   		    android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:orientation="horizontal">
        	
   		    <TextView
                android:id="@+id/IP_TV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="IP adress:" />
   		    
   		    <Button
        	    android:id="@+id/server_IPAddressHelpButton"
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:text="Help" />
        
        	<Button
        	    android:id="@+id/server_IPAddressHelpVoiceButton"
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:text="Voice Help" />
       	</LinearLayout>
       	<LinearLayout 
   	    	android:layout_width="wrap_content"
   	    	android:layout_height="wrap_content"
   	    	android:orientation="horizontal">
        	<EditText
                android:id="@+id/IP_ET"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >
                <requestFocus />
            </EditText>
       	</LinearLayout>
       	
       	<View
   	    	android:layout_width="fill_parent"
        	android:layout_height="2dp"
        	android:background="#449DEF"
        	android:layout_margin="5dp"/>
       	
       	<!-- Port -->
   		<LinearLayout 
   		    android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:orientation="horizontal">
        	
   		    <TextView
                android:id="@+id/Port_TV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="IPort:" />
   		    
   		    <Button
        	    android:id="@+id/server_PortHelpButton"
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:text="Help" />
        
        	<Button
        	    android:id="@+id/server_IPortHelpVoiceButton"
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:text="Voice Help" />
       	</LinearLayout>
       	<LinearLayout 
   	    	android:layout_width="wrap_content"
   	    	android:layout_height="wrap_content"
   	    	android:orientation="horizontal">
        	<EditText
                android:id="@+id/Port_ET"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number" >
            </EditText>
       	</LinearLayout>
       	</LinearLayout>
       	</ScrollView>
   		
   	    
	</LinearLayout>
