	    <TableLayout
	        android:id="@+id/trainSettings"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:visibility="gone"
	         >
	
	        <TextView
	            android:id="@+id/textView1"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="Face Settings:"
	            android:textAppearance="?android:attr/textAppearanceLarge" />
	
	        <TableRow
	            android:id="@+id/tableRow1"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content" >
	
	            <TextView
	                android:id="@+id/TrainPhotoNumTV"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="Photo num (Train):" />
	
	            <EditText
	                android:id="@+id/TrainPhotoNumET"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:inputType="number" >
	
	                <requestFocus />
	            </EditText>
	
	        </TableRow>
	        
	        <TableRow
	            android:id="@+id/tableRow2"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content" >
	
	            <TextView
	                android:id="@+id/RecogPhotoNumTV"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="Photo num (Recog):" />
	
	            <EditText
	                android:id="@+id/RecogPhotoNumET"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:inputType="number" >
	                <requestFocus />
	            </EditText>
	
	        </TableRow>
	        
	        <TableRow
	            android:id="@+id/tableRow3"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content" >
	
	            <TextView
	                android:id="@+id/recognizerThresholdTV"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="Threshold:" />
	
	            <EditText
	                android:id="@+id/recognizerThresholdET"
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:inputType="number|numberDecimal" >
	                <requestFocus />
	            </EditText>
	
	        </TableRow>
	        
	        <TableRow
	            android:id="@+id/tableRow4"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content" >
	
	            <TextView
	                android:id="@+id/ImageScaleTV"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="Image scale:" />
	            
	            <Spinner
			        android:id="@+id/ImageScaleSP"
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:entries="@array/ImageScaleOptions" />
	
	        </TableRow>
	        
	        <TableRow
	            android:id="@+id/tableRow5"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content" >
	
	            <TextView
	                android:id="@+id/faceRecognizerAlgorithmTV"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="Algorithm:" />
	            
	            <Spinner
			        android:id="@+id/faceRecognizerAlgorithmSP"
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:entries="@array/faceAlgorithmOptions" />
	
	        </TableRow>
	        
	        <TableRow
	            android:id="@+id/tableRow6"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content" >
	
	            <TextView
	                android:id="@+id/face_resolutionTV"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="Resolution:" />
	            
	            <Spinner
			        android:id="@+id/face_resolutionSP"
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        />
	
	        </TableRow>
	        
	         <TableRow
	            android:id="@+id/tableRow7"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content" >
	
	            <TextView
	                android:id="@+id/GroupRectangleTV"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="Group rectangle threshold:" />
	
	            <EditText
	                android:id="@+id/GroupRectangleET"
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:inputType="numberDecimal" >
	            </EditText>
	
	        </TableRow>
	        
	        
	        <TableRow
	            android:id="@+id/tableRow8"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content" >
	            
	            <CheckBox
			        android:id="@+id/faceDetectEyes"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:text="Detect Eyes" />
	        </TableRow>
	        
	         <TableRow
	            android:id="@+id/tableRow9"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content" >
	            
	            <CheckBox
			        android:id="@+id/faceDetectNose"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:text="Detect Nose" />
	        </TableRow>
	        
	        <Button
	            android:id="@+id/saveTrainButton"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:text="Save" />
	        
	        <Button
	            android:id="@+id/cancelButton2"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:text="Cancel" />
	
	    </TableLayout>
	
</RelativeLayout>

