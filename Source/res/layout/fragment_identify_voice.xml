<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="${relativePackage}.${activityClass}" >

    <Button
        android:id="@+id/btnIdentify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Identify" />

    <ListView
        android:id="@+id/identify_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/btnIdentify" >
    </ListView>

    <TextView
        android:id="@+id/txtPossiblePerson"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnIdentify"
        android:layout_alignBottom="@+id/btnIdentify"
        android:layout_marginLeft="24dp"
        android:layout_toRightOf="@+id/btnIdentify"
        android:ems="10" />

</RelativeLayout>